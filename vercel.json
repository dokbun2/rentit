{
  "version": 2,
  "buildCommand": "npx vite build && [ -f public/sitemap.xml ] && cp -f public/sitemap.xml dist/ || true && [ -f public/sitemap-new.xml ] && cp -f public/sitemap-new.xml dist/ || true && [ -f public/robots.txt ] && cp -f public/robots.txt dist/ || true && [ -d public/imgs ] && cp -rf public/imgs dist/ || true",
  "outputDirectory": "dist",
  "public": true,
  "routes": [
    {
      "src": "/(.*)",
      "headers": {
        "X-Robots-Tag": "index, follow",
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
      },
      "continue": true
    },
    {
      "src": "/sitemap-new.xml",
      "dest": "/sitemap-new.xml"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml"
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/fonts/(.*)",
      "dest": "/fonts/$1"
    },
    {
      "src": "/imgs/(.*)",
      "dest": "/imgs/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 